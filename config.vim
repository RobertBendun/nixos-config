colorscheme gruvbox
" Disable background
autocmd ColorScheme * highlight Normal ctermbg=NONE guibg=NONE

set encoding=utf-8
set hidden
set ignorecase
set incsearch
set mouse=a
set nohlsearch
set noruler
set number relativenumber
set shiftwidth=0
set smartcase
set softtabstop=2
set splitbelow splitright
set tabstop=2
set termguicolors
set noerrorbells
set scrolloff=8
set signcolumn=no
set foldcolumn=0
set nofoldenable

set noswapfile
set nobackup
set undodir=~/.cache/vim/undodir
set undofile

